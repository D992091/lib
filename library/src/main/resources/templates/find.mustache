</form>

<table border="1px solid">
    <tr>
        <td>№</td>
        <td>Название</td>
        <td>Автор</td>
        <td>Артикул</td>
    </tr>
    {{#books}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{author}}</td>
            <td>{{articul}}</td>
        </tr>

    {{/books}}
</table>
{{error}}
</body>

